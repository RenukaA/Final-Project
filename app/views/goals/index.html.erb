<h1><b><font color="#08088A"><font face="BlairMdITC TT"><font size="7">Goal Index</font></font></font></b></h1>

<% @goals.each do |goal| %>

<p>
  <strong>Goal:</strong>
  <%= goal.title %>
</p>

<p>
  <strong>Goal Type:</strong>
  <%= goal.type %>
</p>

<p>
  <strong>Steps Needed:</strong>
  <%= goal.steps_needed %>
</p>

<p>
  <strong>Steps Achieved:</strong>
  <%= goal.steps_achieved %>
</p>

<p>
  <strong>Priority:</strong>
  <%= goal.priority %>
</p>

<p>
  <strong>Target Date:</strong>
  <%= goal.target_date %>
</p>

<p><%= link_to "Edit", edit_goal_path(goal)%></p>
<p><%= link_to "Delete", goal_path(goal), method: :delete, :confirm => 'Are you sure?' %></p>     

<% end %> 

<p><%= link_to "Home", root_path %></p>


