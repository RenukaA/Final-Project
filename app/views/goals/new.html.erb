<h1>New Goal</h1>

<%= form_for :goal do |f| %>
  <p>
    <%= f.label :goal %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :steps_needed %><br>
    <%= f.text_area :text %>
  </p>
 
 <p>
    <%= f.label :steps_achieved %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>